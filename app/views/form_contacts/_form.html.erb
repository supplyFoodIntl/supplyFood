<%= form_with(model: form_contact, local: true,class: "form-horizontal") do |form| %>
  <% if form_contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form_contact.errors.count, "error") %> prohibited this form_contact from being saved:</h2>

      <ul>
      <% form_contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group field">  
        <div class="control-label col-sm-4">
            <%= form.label :name %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :name, class:"form-control",placeholder:"Public place type", autofocus:true %>
        </div>
    </div>
 <div class="form-group field">  
        <div class="control-label col-sm-4">
            <%= form.label :subject %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :subject, class:"form-control",placeholder:"Public place type", autofocus:true %>
        </div>
    </div>
 <div class="form-group field">  
        <div class="control-label col-sm-4">
            <%= form.label :message %>
        </div>
        <div class="col-sm-8">
            <%= form.text_area :message, class:"form-control",placeholder:"Public place type", autofocus:true, rows:7 %>
        </div>
    </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
