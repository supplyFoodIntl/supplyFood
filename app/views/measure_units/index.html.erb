<%= render 'management/tab'  %>
<p id="notice"><%= notice %></p>

<h2>Measure Units</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measure_units.order(:name).each do |measure_unit| %>
      <tr scope="row">
        <td><%= measure_unit.name %></td>
        <td><%= link_to 'Edit', edit_measure_unit_path(measure_unit) %></td>
        <td><%= link_to 'Destroy', measure_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Measure Unit', new_measure_unit_path %>
<%= render 'management/tab-end' %>