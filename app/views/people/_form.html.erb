<div class="row">
    <div class="col-xs-12">
        <%= form_with(model: person, local: true,:html => {class:"form-horizontal",role:"form"}) do |form| %>
          <% if person.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

              <ul>
              <% person.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group field">
              <div class="control-label col-sm-4">
                    <%= form.label "Person name" %>
              </div>
              <div class="col-sm-8">
                    <%= form.text_field :nmperson, class:"form-control",placeholder:"Name of the person", autofocus:true %>
              </div>
          </div>

          <div class="form-group field">
              <div class="control-label col-sm-4">
                  <%= form.label :create_time %>
              </div>
              <div class="col-sm-8">
                  <%= form.datetime_select :create_time %>
              </div>
          </div>

          <div class="form-group field">
              <div class="control-label col-sm-4">
                  <%= form.label :pt_idpersontype %>
              </div>
              <div class="col-sm-8">
                  <%= form.number_field :pt_idpersontype %>
              </div>
          </div>

          <div class="form-group field">
              <div class="control-label col-sm-4">
                  <%= form.label :ic %>
              </div>
              <div class="col-sm-8">
                    <%= form.text_field :ic %>
              </div>
          </div>

          <div class="form-group field">
              <div class="control-label col-sm-4">
                  <%= form.label :ict_idictype %>
              </div>
              <div class="col-sm-8">
                  <%= form.number_field :ict_idictype %>
              </div>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
    </div>
</div>
