<p id="notice"><%= notice %></p>

<h1>Person Cocoons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ic</th>
      <th>Ic type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_cocoons.each do |person_cocoon| %>
      <tr>
        <td><%= person_cocoon.name %></td>
        <td><%= person_cocoon.ic %></td>
        <td><%= person_cocoon.ic_type %></td>
        <td><%= link_to 'Show', person_cocoon %></td>
        <td><%= link_to 'Edit', edit_person_cocoon_path(person_cocoon) %></td>
        <td><%= link_to 'Destroy', person_cocoon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

