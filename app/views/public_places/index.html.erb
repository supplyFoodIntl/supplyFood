<p id="notice"><%= notice %></p>

<h1>Public Places</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Public place type</th>
      <th scope="col">Number</th>
      <th scope="col">Postal code hint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_places.each do |public_place| %>
      <tr scope="row">
        <td><%= public_place.public_place_type.name %></td>
        <td><%= public_place.name %></td>
        <td><%= public_place.number %></td>
        <td><%= public_place.postal_code_hint.code %></td>
        <td><%= link_to 'Show', public_place %></td>
        <td><%= link_to 'Edit', edit_public_place_path(public_place) %></td>
        <td><%= link_to 'Destroy', public_place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

