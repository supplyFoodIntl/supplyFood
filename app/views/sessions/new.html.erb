<h1>Sign in</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: signin_path) do |form| %>  
  <div class="form-group">
      <div class="control-label col-sm-2">
            <%= form.label :email %>
      </div>
      <div class="col-sm-8">
            <%= form.email_field :email %>
      </div>
  </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
            <%= form.label :password_digest %>
      </div>
      <div class="col-sm-8">
            <%= form.password_field :password_digest %>
      </div>
  </div>    


  <div class="actions">
    <%= form.submit "Sign in", class: 'btn btn-primary btn-lg'%>
  </div>

<% end %>
