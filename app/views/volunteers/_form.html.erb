<%= form_with(model: volunteer, local: true) do |form| %>
  <% if volunteer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(volunteer.errors.count, "error") %> prohibited this volunteer from being saved:</h2>

      <ul>
      <% volunteer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group field">  
        <div class="control-label col-sm-4">
            <%= form.label :operating_area %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :operating_area, class:"form-control",placeholder:"eg: near Baxter Av.", autofocus:true %>
        </div>
    </div> 

   <div class="form-group field">  
        <div class="control-label col-sm-4">
            <%= form.label :availability %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :availability, class:"form-control",placeholder:"eg : saturday and sunday 10-4", autofocus:true %>
        </div>
    </div> 

   <div class="form-group field">  
        <div class="control-label col-sm-4">
            <%= form.label :skills %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :skills, class:"form-control",placeholder:"eg : cooking, sanitary inspection, driving car, etc.", autofocus:true %>
        </div>
    </div> 

   <div class="form-group field">  
        <div class="control-label col-sm-4">
            <%= form.label :Limitations %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :health_concerns, class:"form-control",placeholder:"eg : reduced mobility", autofocus:true %>
        </div>
    </div> 



  <div class="actions">
    <%= form.submit "Apply" %>
  </div>
<% end %>
